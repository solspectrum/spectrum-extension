{
  "name": "Spectrum Wallet Chrome Extension",
  "description": "Spectrum Cryptocurrency Wallet",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spectrum Wallet",
    "default_icon": "/images/logo.png"
  },
  "icons": {
    "16": "./images/logo.png",
    "32": "./images/logo.png",
    "48": "./images/logo.png",
    "128": "./images/logo.png"
  },
  "permissions": ["storage", "activeTab", "scripting"]
}